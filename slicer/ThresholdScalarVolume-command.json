{
    "inputs": [
        {
            "command-line-flag": "--thresholdtype",
            "name": "ThresholdType",
            "default-value": "Outside",
            "required": true,
            "type": "string",
            "description": "What kind of threshold to perform. If Outside is selected, uses Upper and Lower values. If Below is selected, uses the ThresholdValue, if Above is selected, uses the ThresholdValue."
        },
        {
            "command-line-flag": "--threshold",
            "name": "ThresholdValue",
            "default-value": "128",
            "required": true,
            "type": "number",
            "description": "Threshold value"
        },
        {
            "command-line-flag": "--lower",
            "name": "Lower",
            "default-value": "1",
            "required": true,
            "type": "number",
            "description": "Lower threshold value"
        },
        {
            "command-line-flag": "--upper",
            "name": "Upper",
            "default-value": "200",
            "required": true,
            "type": "number",
            "description": "Upper threshold value"
        },
        {
            "command-line-flag": "--outsidevalue",
            "name": "OutsideValue",
            "default-value": "0",
            "required": true,
            "type": "number",
            "description": "Set the voxels to this value if they fall outside the threshold range"
        },
        {
            "name": "Negate",
            "true-value": "--negate",
            "required": true,
            "default-value": "false",
            "type": "boolean",
            "description": "Swap the outside value with the inside value."
        },
        {
            "required": true,
            "type": "string",
            "name": "InputVolume",
            "default-value": "",
            "description": "Input volume"
        },
        {
            "required": true,
            "type": "string",
            "name": "OutputVolume",
            "default-value": "",
            "description": "Thresholded input volume"
        }
    ],
    "description": "<p>Threshold an image.</p><p>Set image values to a user-specified outside value if they are below, above, or between simple threshold values.</p><p>ThresholdAbove: The values greater than or equal to the threshold value are set to OutsideValue.</p><p>ThresholdBelow: The values less than or equal to the threshold value are set to OutsideValue.</p><p>ThresholdOutside: The values outside the range Lower-Upper are set to OutsideValue.</p>",
    "image": "quay.io/fedorov/slicerdockers:4.8.1",
    "info-url": "http://wiki.slicer.org/slicerWiki/index.php/Documentation/Nightly/Modules/Threshold",
    "name": "Threshold Scalar Volume",
    "command-line": "/opt/slicer/Slicer --launch ThresholdScalarVolume #ThresholdType# #ThresholdValue# #Lower# #Upper# #OutsideValue# #Negate# #InputVolume# #OutputVolume#",
    "xnat": [],
    "label": "Threshold Scalar Volume",
    "version": "0.1.0.$Revision: 2104 $(alpha)",
    "schema-version": "1.0",
    "type": "docker"
}