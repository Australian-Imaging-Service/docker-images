{
    "name": "dcmtonrrd-batch",
    "description": "Launch dcmtonrrd containers on all scan files in a session",
    "type": "docker",
    "version": "1.0",
    "schema-version": "1.0",
    "image": "xnat/dicomtonrrd-pyradiomics-batch:1.1",
    "command-line": "launch-dcmtonrrd-containers.py $XNAT_HOST $XNAT_USER $XNAT_PASS #SESSION_ID# #PROJECT#",
    "override-entrypoint": true,
    "mounts": [],
    "inputs": [
        {
            "name": "PROJECT",
            "user-settable": false,
            "required": true
        },
        {
            "name": "SESSION_ID",
            "user-settable": false,
            "required": true
        }
    ],
    "outputs": [],
    "xnat": [
        {
            "name": "dcmtonrrd-session",
            "label": "Dcmtonrrd - all scans",
            "description": "Launch dcmtonrrd containers on all scans in a session.",
            "contexts": [
                "xnat:imageSessionData"
            ],
            "external-inputs": [
                {
                    "name": "session",
                    "description": "Input session",
                    "type": "Session",
                    "required": true
                }
            ],
            "derived-inputs": [
                {
                    "name": "project",
                    "type": "string",
                    "derived-from-wrapper-input": "session",
                    "derived-from-xnat-object-property": "project-id",
                    "provides-value-for-command-input": "PROJECT",
                    "user-settable": false,
                    "required": true
                },
                {
                    "name": "session-id",
                    "type": "string",
                    "derived-from-wrapper-input": "session",
                    "derived-from-xnat-object-property": "id",
                    "provides-value-for-command-input": "SESSION_ID",
                    "user-settable": false,
                    "required": true
                }
            ],
            "output-handlers": []
        }
    ]
}
