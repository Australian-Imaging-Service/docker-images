{
  "name": "anon-on-demand",
  "description": "anon-on-demand",
  "info-url": "",
  "docker-image": "dmaffitt/anon:0.2",
  "run": {
    "command-line": "anonymize /script /dicom-in/#dicomFileIn# /dicom-out",
    "mounts": [
      {
        "name": "anonScript-in",
        "type": "input",
        "path": "/script",
        "file-input": "anonScript"
      },
      {
        "name": "dicom-in",
        "type": "input",
        "path": "/dicom-in",
        "file-input": "dicomFileIn"
      },
      {
        "name": "dicom-out",
        "type": "output",
        "path": "/dicom-out",
        "file-input": "dicomFileOut"
      }
    ]
  },
  "inputs": [
    {
      "name": "session",
      "description": "the parent session",
      "type": "Session",
      "required": true
    },
    {
      "name": "anonScript",
      "description": "the anonScript",
      "type": "Resource",
      "required": true,
      "parent": "session"
    },
    {
      "name": "scan",
      "description": "the scan",
      "type": "Scan",
      "required": true,
      "parent": "session"
    },
    {
      "name": "dicomScanResource",
      "description": "the dicom input",
      "type": "Resource",
      "required": true,
      "parent": "scan",
      "matcher": "@.label == 'DICOM'"
    },
    {
      "name": "dicomFileIn",
      "description": "the dicom input",
      "type": "File",
      "required": true,
      "parent": "dicomScanResource"
    }
  ],
  "outputs": [
    {
      "name": "dicomFileOut",
      "description": "The anonymized dicom output",
      "type": "Resource",
      "label": "DICOM_ANON",
      "parent": "scan",
      "files": {
        "mount": "dicom-out"
      }
    }
  ]
}
